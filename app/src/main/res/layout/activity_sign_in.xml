<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:gravity="center_horizontal">

        <!-- Logo with Name + Subtitle -->

        <ImageView
            android:layout_width="292dp"
            android:layout_height="119dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo" />

        <!-- 🟪 App Title -->
        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TECHNO\nPULSE"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/fanwoodtext"
            android:layout_marginBottom="1dp"
            android:paddingTop="3dp"/>

        <!-- 📝 Subtitle -->
        <TextView
            android:id="@+id/textTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truth, We Report it."
            android:textColor="#444444"
            android:textSize="13sp"
            android:fontFamily="@font/natosans"
            android:letterSpacing="0.01"
            android:layout_marginBottom="10dp"/>

        <!-- Title -->

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textSize="20sp"
            android:fontFamily="@font/dmsansregular"
            android:textColor="#000000"
            android:layout_marginBottom="23dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_margin="24dp">

            <!-- Username -->
            <EditText
                android:id="@+id/editUsername"
                android:layout_width="297dp"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_border"
                android:hint="email"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="16sp" />

            <!-- Password -->

            <!-- Sign In Button -->
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="298dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_border"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Continue"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#8E008C"
                app:cornerRadius="12dp" />



            <!-- Sign Up Link -->

            <LinearLayout
                android:paddingTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have account?"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/linkSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Signup"
                    android:textColor="#8E008C"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:foreground="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textTagline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty of Technology - University of Colombo"
            android:textColor="#444444"
            android:textSize="13sp"
            android:fontFamily="@font/natosans"
            android:letterSpacing="0.01"
            android:paddingTop="70dp"/>

        <TextView
            android:id="@+id/textTagline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techno Pulse v1.0.0"
            android:textColor="#444444"
            android:textSize="13sp"
            android:fontFamily="@font/natosans"
            android:letterSpacing="0.01"
            android:paddingTop="0dp"/>
    </LinearLayout>
</ScrollView>

